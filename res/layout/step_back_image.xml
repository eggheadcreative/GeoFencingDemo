<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView android:layout_width="match_parent"
               android:layout_height="144dp"
               android:id="@+id/back_image"
               android:layout_alignParentTop="true"
            />

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_image"
            android:gravity="center"
            android:layout_alignParentBottom="true">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" cancel "
                android:id="@+id/step2_cancel" android:textSize="24sp"
                android:padding="8dp"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/step2_submit"
                android:title="continue"
                android:layout_toRightOf="@+id/step2_cancel" android:text="continue" android:textSize="24sp"
                android:padding="8dp"/>


    </RelativeLayout>

</RelativeLayout>
